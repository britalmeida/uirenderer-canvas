  "license": "MIT",
  "homepage": "https://github.com/britalmeida/uirenderer-canvas#readme",
  "repository": { "type": "git", "url": "git+https://github.com/britalmeida/uirenderer-canvas.git" },
  "bugs": { "url": "https://github.com/britalmeida/uirenderer-canvas/issues" },

  "main": "index.ts",
  "files": [
    "glsl/",
    "src/",
    "types/",
    "assets/*.ts",
    "index.ts",
    "README.md",
    "LICENSE"
  ],
  "types": "./types/index.d.ts",

  "scripts": {
    "build:types": "tsc",
